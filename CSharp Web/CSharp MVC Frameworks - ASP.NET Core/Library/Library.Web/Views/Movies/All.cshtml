@model IEnumerable<MovieListModel>
@{
    ViewData["Title"] = "All";
}

<h2>Movies</h2>
<a asp-action="Add" class="btn btn-success">Add new movie</a>

<div>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>
                    Title
                </th>
                <th>
                    Director
                </th>
                <th>
                    Status
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
                <tr>
                    <td>
                        <a asp-controller="Movies" asp-action="Details" asp-route-id="@movie.Id">@movie.Title</a>
                    </td>
                    <td>
                        <a asp-controller="Directors" asp-action="Details" asp-route-id="@movie.DirectorId">@movie.Director</a>
                    </td>
                    <td>
                        @movie.Status
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>